@model Vidly.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@**
    To render classes or anything dynamically using logic make sure to have the code written before it renders
*@
@{
    var className = Model.Costumers.Count > 5 ? "popular" : null;
 }

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Costumers.Count == 0)
{ 
    <text>No one has rented this movie before</text>
}

<ul>
    @foreach (var costumer in Model.Costumers)
    {
        <li>@costumer.Name</li>
    }

</ul>

 